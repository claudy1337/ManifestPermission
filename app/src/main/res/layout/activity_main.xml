<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/CheckPermissions"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/backroundButton"
        android:text="@string/Accept"
        app:cornerRadius="@dimen/fab_margin" />


    <Button
        android:id="@+id/showRationalDialog"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cameraCheckPermissions"
        android:layout_alignParentEnd="true"
        app:cornerRadius="@dimen/fab_margin"
        android:backgroundTint="@color/backroundButton"
        android:text="@string/AppPermission" />
    <Button
        android:id="@+id/ShowListPermission"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="@color/backroundButton"
        android:text="@string/ShowListPermission"
        app:cornerRadius="@dimen/fab_margin" />


</LinearLayout>